<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Logi Connect</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</head>


<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-1">
                <nav class="sidebar" id="myNav">
                    <div class="logo-menu">
                        <h2 class="logo">Logi Connect</h2>
                        <i class='bx bx-menu toggle-btn'></i>
                    </div>
                    <ul class="list">
                        <li class="list-item">
                            <a href="/Home/Index" name="home">
                                <i class='bx bxs-home'></i>
                                <span class="link-name">Home</span>
                            </a>
                        </li>

                        <li class="list-item">
                            <a href="/Trucks/Index" name="trucks">
                                <i class='bx bxs-truck'></i>
                                <span class="link-name">Trucks</span>
                            </a>
                        </li>

                        <li class="list-item">
                            <a href="/Driver/Index" name="drivers">
                                <i class='bx bx-car'></i>
                                <span class="link-name">Drivers</span>
                            </a>
                        </li>

                        <li class="list-item">
                            <a href="/Product/Index" name="product">
                                <i class='bx bx-shopping-bag'></i>
                                <span class="link-name">Product</span>
                            </a>
                        </li>

                        <li class="list-item">
                            <a href="/Transport/Index" name="transport">
                                <i class='bx bx-package'></i>
                                <span class="link-name">Transport</span>
                            </a>
                        </li>

                    </ul>

                    <ul class="list">
                        <li class="list-item ">
                            <a href="/User/Login" name="logout">
                                <i class='bx bx-log-out'></i>
                                <span class="link-name">Logout</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>

            <div class="col-md-11 content">
                @RenderBody()

            </div>
        </div>
    </div>


    <script>
        

        $(document).ready(function () {
            let path = window.location.href;
            let liElem = $('#myNav').find('ul').find('li');
          
            for (let i = 0; i < liElem.length; i++) {
                if ($(liElem[i]).find('a').prop('href') == path) {
                    $(liElem[i]).addClass('active');
                }
                else { 

                    $(liElem[i]).removeClass('active');
                }  
            }

        });

    </script>


    <script src="~/js/site.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.min.js" type="text/javascript"></script>

</body>
</html>


   @using MvcStock.Controllers
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@model ChartViewModel

<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.min.js" type="text/javascript"></script>



<div class="panel">
    <div class="home-title">
        <a href="/Transport/Index" class="logo">Give An Order</a>

        <div class="social-media">
            <a href="#">
                <i class='bx bxl-instagram'></i>
            </a>
            <a href="#">
                <i class='bx bxl-twitter'></i>
            </a>
            <a href="#">
                <i class='bx bxl-facebook-circle'></i>
            </a>

        </div>
    </div>

    <section class="home">

        <div class="home-content">
            <h1>Welcome</h1>
            <p>
                Logi Connect company provides the logistics network preferred by two companies in their trade with each other. The main functions of LogiConnect are:
                Large-scale freight transportation,
                Supply chain management,
                Storage and distribution services 
                LogiConnect stores all the data when creating this logistics network and controls and uses this data efficiently. In this way, it offers the most effective and efficient logistics solutions to its trading partners.

            </p>
            <a href="/Trucks/Index" class="newAddBtn">Manage Trucks</a>
        </div>


        <div class="rhombus2"></div>
    </section>
</div>

<div class="container dashboard">
    <div class="row">
        <div class="col-md-12">
                <div class="row">
                    <div class="col-md-6">
                      <div class="panel-dashboard">
                        <h1>Our Products</h1>
                        <canvas id="myPieChart" class="chartBox" style="width: 100%;max-height: 300px; margin-top: 30px;"></canvas>
                      </div>
                    </div>
                      
                        
                    

                    <div class="col-md-6">
                        <div class="panel-dashboard1">
                          <h1>Storages (kg)</h1>
                          <canvas id="myDoughnutChart" class="chartBox" style="width: 100%; max-height: 320px;"></canvas>
                        </div>
                           
                    </div>
                </div>
            
                
        </div>
    </div>
</div>

<script>
    var ctxPie = document.getElementById('myPieChart').getContext('2d');
    var pieChart = new Chart(ctxPie, {
        type: 'pie',
        data: {
            labels: @Html.Raw(Json.Serialize(Model.PieChartLabels)),
            datasets: [{
                data: @Html.Raw(Json.Serialize(Model.PieChartData)),
                backgroundColor: ['#FF6384', '#F78C8D', '#FFCE56', '#FF9F40', '#A2D9CE', '#4A90E2', '#8E44AD'],
                hoverOffset: 4
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            legend: {
                position: 'top',
                labels: {
                    fontColor: 'rgba(255, 255, 255, 1)',
                    fontSize: 12,
                    fontStyle: 'bold'
                }
            },
            animation: {
                animateScale: true,
                animateRotate: true
            }
        }
    });


    var ctxDoughnut = document.getElementById('myDoughnutChart').getContext('2d');
    var myDoughnutChart = new Chart(ctxDoughnut, {
        type: 'doughnut',
        data: {
            labels: @Html.Raw(Json.Serialize(Model.DoughnutLabels)),
            datasets: [{
                label: 'Product Distribution',
                data: @Html.Raw(Json.Serialize(Model.DoughnutData)),
                backgroundColor: [
                    'rgba(255, 99, 132, 0.6)',
                    'rgba(54, 162, 235, 0.6)',
                    'rgba(255, 206, 86, 0.6)',
                    'rgba(75, 192, 192, 0.6)',
                    'rgba(153, 102, 255, 0.6)',
                    'rgba(255, 159, 64, 0.6)',
                    'rgba(255, 87, 34, 0.6)',
                    'rgba(123, 31, 162, 0.6)',
                    'rgba(255, 105, 180, 0.6)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)',
                    'rgba(255, 87, 34, 1)',
                    'rgba(123, 31, 162, 1)',
                    'rgba(255, 105, 180, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false, 
            legend: {
                position: 'top',
                labels: {
                    fontColor: 'rgba(255, 255, 255, 1)',
                    fontSize: 12,
                    fontStyle: 'bold'
                }
            },
            animation: {
                animateScale: true,
                animateRotate: true
            }
        }
    });


</script>

    



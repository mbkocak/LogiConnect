@using MvcStockv2.Models.Entity
@model MvcStockv2.Models.Entity.Driver
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("ApplyUpdate", "Driver", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <div class="row">
                    @Html.HiddenFor(m => m.DriverId)

                    <div class="col-md-6">
                        <label for="DriverName">Driver Name:</label>
                        @Html.TextBoxFor(m => m.DriverName, new { @class = "form-control", id = "DriverName" })
                    </div>

                    <div class="col-md-6">
                        <label for="DriverSurname">Driver Surname:</label>
                        @Html.TextBoxFor(m => m.DriverSurname, new { @class = "form-control", id = "DriverSurname" })

                    </div>

                </div>

                <div class="row">

                    <div class="col-md-6">
                        <input type="submit" value="Update" class="btn btn-success" style="margin-top: 20px;" />
                    </div>
                </div>

            </div>
        </div>
    </div>
}

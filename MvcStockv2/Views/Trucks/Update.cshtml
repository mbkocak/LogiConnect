@using MvcStockv2.Models.Entity
@using MvcStock.Controllers
@using MvcStock.Models.ViewModel
@model DriverAndTransportViewModel

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("ApplyUpdate", "Trucks", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <div class="row">
                    @Html.HiddenFor(m => m.TransportId)

                    <div class="col-md-4">
                        <label for="DriverId">Driver Name:</label>
                        <select name="DriverId" id="DriverId" class="form-control">
                            @foreach (var item in Model.Drivers)
                            {
                                <option value="@item.DriverId">@item.DriverName @item.DriverSurname</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label for="TruckCapacity">Truck Capacity:</label>
                        @Html.TextBoxFor(m => m.TruckCapacity, new { @class = "form-control", id = "TruckCapacity" })

                    </div>

                    <div class="col-md-4">
                        <label for="HighwayFee">Highway Fee:</label>
                        @Html.TextBoxFor(m => m.HighwayFee, new { @class = "form-control", id = "HighwayFee" })
                    </div>


                </div>

                <div class="row">
                    
                    <div class="col-md-6">
                        <input type="submit" value="Update" class="btn btn-success" style="margin-top: 20px;" />
                    </div>
                </div>

            </div>
        </div>
    </div>

}

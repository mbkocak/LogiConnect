@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login Form</title>
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <div class="container">

        <div class="wrapper">
            <form asp-action="Login" method="post" autocomplete="off">
                <h1>Logi Connect</h1>

                <div class="input-box">
                    <input type="text" placeholder="Username" id="UserName"  name="UserName" autocomplete="off" required />
                    <i class='bx bxs-user'></i>
                </div>
                <div class="input-box">
                    <input type="password"
                           placeholder="Password" id="password" name="password" autocomplete="new-password" required />
                    <i class='bx bxs-lock-alt'></i>
                </div>

                <div class="remember-forgot" style="margin-top: -15px;">
                    <label><input type="checkbox">Remember me</label>
                    
                </div>

                <button type="submit" class="btn wrapper">Login</button>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div style="color: green; margin-top: 10px; margin-bottom: 10px;">
                        @TempData["SuccessMessage"]
                    </div>
                }
                
                @if (ViewData["ErrorMessage"] != null)
                {
                    <div style="color: red; margin-bottom: 10px; margin-top: 10px;">
                        @ViewData["ErrorMessage"]
                    </div>
                }

                
            </form>
            <div class="register.link" style="margin-top: 15px;">
                <p>Don't have an account? <a href="/User/Register">Register</a></p>
            </div>
     
        </div>
    </div>
</body>
</html>


